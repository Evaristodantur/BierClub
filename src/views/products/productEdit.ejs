<!DOCTYPE html>
<html lang="es">
  <head>
    <title>BierClub - Editar producto</title>
    <%- include('../partials/head.ejs') %>
  </head>

  <body>

    <header>
      <!-- NAV -->
      <%- include('../partials/nav.ejs') %>
    </header>

    <!-- ESPACIADO DESDE EL TOP DE LA PAGINA -->
    <div class="productAddtop"></div>

    <!-- CONTAINER PRODUCTADD -->
    <div class="productAdd">

      <!-- TITULO -->
      <h1>Edite su producto</h1>

      <!-- FORMULARIO -->
      <form class="formulario-carga" action="/products/productEdit/<%= id %>/?_method=PUT" method="POST" enctype="multipart/form-data">

        <!-- BLOQUE DE IMAGEN, NOMBRE, PRECIO Y CANTIDAD -->
        <div class="flex-imgPrev-detalle">
          <div class="campo-nombre-precio-cantidad">

            <!-- NOMBRE -->
            <div class="nombre">
              <label for="nombreProducto">Nombre del producto:</label>
              <input id="nombreProducto" type="text" name="nombre" placeholder="Nombre" value="<%= nombre %>">
            </div>
            
            <!-- PRECIO -->
            <div class="precio">
              <label for="precio">Precio:</label>
              <input id="precio" type="text" name="precio" placeholder="Precio" value="<%= precio %>">
            </div>
            
            <!-- CANTIDAD -->
            <div class="cantidad">
              <label for="cantidad">Cantidad:</label>
              <input id="cantidad" type="text" name="stock" placeholder="Cantidad" value="<%= stock %>">
            </div>
  
          </div>

          <!-- IMAGEN -->
          <div class="imagenPrev">
            <img src="/images/productos/producto-2.jpg" alt="muestra de producto">
          </div>
        </div>

        

        

        <!-- CATEGORIA -->
        <div class="flex-categoria-imgFile">

          <div class="categoria">
            <label for="categoria">Categoria:</label>
            <select class="select-categoria" name="categoria" id="categoria">
              <option value="cerveza">Cerveza</option>
              <option value="vino">Vino</option>
              <option value="lupulada">Lupulada</option>
              <option value="no lupulada">No Lupulada</option>
            </select>
          </div>

          
        <!-- SUBIR IMAGEN -->
        <div class="imgFile">
          <input name="imagen" type="file">
        </div>

        </div>

        <!-- DESCRIPCION -->
        <textarea class="descripcionDelProducto" name="descripcion" placeholder="Describa el producto"><%=descripcion%></textarea>
          <div class="flex-botones-publicar">
              <button class="btn-publicar" type="submit" , id="publicar" , value="guardar"> Guardar Modificaciones  
              <button onclick="window.location.href='/products/productEdit/borrar/<%= id %>'" class="btn-publicar btn-reset" type="reset" , id="reset" , value="reset">Borrar Producto</button>
          </div>
        
      </form>
    </div>
   
</body>
</html>
