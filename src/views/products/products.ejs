<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BierClub - Todos los Productos</title>
	<link rel="icon" href="/images/faviconLogo.ico"/>
	<script src="/js/productAdmin.js" type="text/javascript"></script>
	<%- include('../partials/head.ejs') %>
</head>

<body>
	<!-- NAV -->
	<header>
		<%- include('../partials/nav.ejs') %>
	</header>
	
		<!-- CONTAINER PRODUCT-CATALOGO -->
		<div class="products-catalogo">	
			
			<!-- MAIN SECCION FILTRO Y PRODUCTOS -->
			<main class="seccion-filtro-muestra-productos">

				<!-- COLUMNA FILTROS -->
				<section class="columna-filtro">

					<!-- SELECCION DE FILTRO -->
					<div class="filtro">
						<select class="select-ordenar" name="ordenar" id="ordenar">
							  <option value="nuevos-productos">Nuevos Productos</option>
							  <option value="mas-vendidos">Mas Vendidos</option>
							  <option value="populares">Populares</option>
							  <option value="especiales">Especiales</option>
						</select>
					</div>
					
						<!-- CERVECERIAS -->
						<div class="filtro">
							<a class="tituloFiltro" onClick="dropDownFiltros('cerveceriasFiltro', 'showModificarFiltros')"><i class="fas fa-caret-down"></i>  Cervecerías</a>
							<div class="cerveceriasDropDown" id="cerveceriasFiltro">
								<h4>Almirante Donn</h4>
								<h4>Andes Origen</h4>
								<h4>Antares</h4>
								<h4>Brahma</h4>
							</div>
						</div>

						<!-- PROVINCIA DE ORIGEN -->
						<div class="filtro">
							<a class="tituloFiltro" onClick="dropDownFiltros('provinciasFiltro', 'showModificarFiltros')"><i class="fas fa-caret-down"></i>  Provincia de Origen</a>
							<div class="cerveceriasDropDown" id="provinciasFiltro">
								<h4>Tucuman</h4>
								<h4>Mendoza</h4>
								<h4>Buenos Aires</h4>
								<h4>Uruguay</h4>
							</div>
						</div>
						
						<!-- FAMILIA -->
						<div class="filtro">
							<a class="tituloFiltro" onClick="dropDownFiltros('familiaFiltro', 'showModificarFiltros')"><i class="fas fa-caret-down"></i>  Familia</a>
							<div class="cerveceriasDropDown" id="familiaFiltro">
								<h4>Ale</h4>
								<h4>Lager</h4>
							</div>
						</div>

						<!-- VOLUMEN -->
						<div class="filtro">
							<a class="tituloFiltro" onClick="dropDownFiltros('volumenFiltro', 'showModificarFiltros')"><i class="fas fa-caret-down"></i>  Volumen</a>
							<div class="cerveceriasDropDown" id="volumenFiltro">
								<h4>250ml</h4>
								<h4>269ml</h4>
								<h4>330ml</h4>
								<h4>350ml</h4>
							</div>
						</div>
					
				</section>


				<!-- COLUMNA PRODUCTOS -->
				<section class="columna-productos">

						<!-- PRODUCTO -->
						<% productos.forEach(producto => { %>
							<article class="producto">
								<% if(producto.images[0] == undefined) { %>
								<a href="/products/productDetail/<%= producto.id %>">
									<img src="/images/productos/product-image-not-available.jpg" alt="<%= producto.name %>">
								</a>
									<h4 class="nombre-producto-collection"><%= producto.name %></h4>
									<div class="precio-stock">
										<div>
										  <h4 class="precio">$ <%= producto.price %> </h4>
										</div>
										<div>
										<% if (producto.stock > 0) { %>
											<h5 class="stock">Stock Disponible</h5>
										<% } else { %>
											<h5 class="stock noHay-stock">Sin Stock</h5>
										<% } %>
									  
										</div>
									</div>
									<button class="btn-agregarAlCarrito" type="button"><i class="fas fa-plus"></i> Añadir al Carrito</button>
							</article>
								<% } else { %>
									<a href="/products/productDetail/<%= producto.id %>">
										<img src="/images/productos/<%= producto.images[0].name %>" alt="<%= producto.name %>">
									</a>
										<h4 class="nombre-producto-collection"><%= producto.name %></h4>
										<div class="precio-stock">
											<div>
											  <h4 class="precio">$ <%= producto.price %> </h4>
											</div>
											<div>
											<% if (producto.stock > 0) { %>
												<h5 class="stock">Stock Disponible</h5>
											<% } else { %>
												<h5 class="stock noHay-stock">Sin Stock</h5>
											<% } %>
										  
											</div>
										</div>
										<button class="btn-agregarAlCarrito" type="button"><i class="fas fa-plus"></i> Añadir al Carrito</button>
								</article>
								<% } %>

						<% }); %>		
					
				</section>
			</main>

		</div>

		<!-- FOOTER -->
		<footer>
			<%- include('../partials/footer.ejs') %>
		</footer>

</body>
</html>