<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BierClub - Product Admin</title>
    <link rel="icon" href="/images/faviconLogo.ico" />
    <script src="/js/productAdmin.js" type="text/javascript"></script>
    <%- include('../partials/head.ejs') %>
  </head>

  <body id="body">
    <!-- NAV -->
    <header><%- include('../partials/nav.ejs', userLogged) %></header>

    <!-- CONTAINER PRODUCT-CATALOGO -->
    <div class="products-catalogo">
      <!-- MAIN SECCION FILTRO Y PRODUCTOS -->
      <main class="seccion-filtro-muestra-productos">
        <!-- COLUMNA FILTROS -->
        <section class="columna-filtro">
          <!-- AGREGAR PRODUCTO AL CATALOGO -->
          <div class="filtro">
            <button
              onclick="window.location.href='/products/productAdd'"
              class="agregarProducto"
            >
              <i class="fas fa-plus"></i> Agregar Producto
            </button>
          </div>

          <!-- BUSCADOR -->
          <div class="filtro">
            <form
              action="/products/productAdmin/search"
              method="GET"
              class="formBuscadorProductos"
            >
              <input
                id="searchProducts"
                type="text"
                name="search"
                placeholder="Buscador de Productos"
                onchange="this.form.submit()"
              />
            </form>
          </div>

          <!-- SELECCION DE FILTRO -->
          <div>
            <form
              action="/products/productAdmin/productsFilter"
              method="GET"
              class="filtro"
            >
              <select
                class="select-ordenar"
                name="ordenar"
                id="ordenar"
                onchange="this.form.submit()"
              >
                <option value="">Filtrado de Productos</option>
                <option
                  value="nuevos-productos"
                  <%
                  if(typeof
                  nuevosProductosSelected
                  !="undefined"
                  )
                  {
                  %
                >
                  selected="selected" <% } %>>Nuevos Productos
                </option>
                <option
                  value="populares"
                  <%
                  if(typeof
                  popularesSelected
                  !="undefined"
                  )
                  {
                  %
                >
                  selected="selected" <% } %>>Populares
                </option>
                <option
                  value="menor-precio"
                  <%
                  if(typeof
                  menorPrecioSelected
                  !="undefined"
                  )
                  {
                  %
                >
                  selected="selected" <% } %>>Menor Precio
                </option>
                <option
                  value="mayor-precio"
                  <%
                  if(typeof
                  mayorPrecioSelected
                  !="undefined"
                  )
                  {
                  %
                >
                  selected="selected" <% } %>>Mayor Precio
                </option>
              </select>
            </form>
          </div>

          <!-- SELECCION DE CATEGORIAS -->
          <div>
            <form
              action="/products/productAdmin/categorie"
              method="GET"
              class="filtro"
            >
              <select
                class="select-ordenar"
                name="filtroCategoria"
                id="categoria"
                onchange="this.form.submit()"
              >
                <option value="">Filtrado por Categoria</option>
                <% categorias.forEach(categoria => { %> <% if(typeof
                categoriaSeleccionada != "undefined" && categoria.id ==
                categoriaSeleccionada) { %>

                <option value="<%=categoria.id%>" selected="selected">
                  <%=categoria.name%>
                </option>
                <% } else { %>
                <option value="<%=categoria.id%>"><%=categoria.name%></option>
                <% } %> <% }); %>
              </select>
            </form>
          </div>

          <!-- CERVECERIAS -->
          <div class="filtro">
            <a
              class="tituloFiltro"
              onClick="dropDownFiltros('cerveceriasFiltro', 'showModificarFiltros')"
              ><i class="fas fa-caret-down"></i> Cervecerías</a
            >
            <div class="cerveceriasDropDown" id="cerveceriasFiltro">
              <h4>Almirante Donn</h4>
              <h4>Andes Origen</h4>
              <h4>Antares</h4>
              <h4>Brahma</h4>
            </div>
          </div>

          <!-- PROVINCIA DE ORIGEN -->
          <div class="filtro">
            <a
              class="tituloFiltro"
              onClick="dropDownFiltros('provinciasFiltro', 'showModificarFiltros')"
              ><i class="fas fa-caret-down"></i> Provincia de Origen</a
            >
            <div class="cerveceriasDropDown" id="provinciasFiltro">
              <h4>Tucuman</h4>
              <h4>Mendoza</h4>
              <h4>Buenos Aires</h4>
              <h4>Uruguay</h4>
            </div>
          </div>

          <!-- FAMILIA -->
          <div class="filtro">
            <a
              class="tituloFiltro"
              onClick="dropDownFiltros('familiaFiltro', 'showModificarFiltros')"
              ><i class="fas fa-caret-down"></i> Familia</a
            >
            <div class="cerveceriasDropDown" id="familiaFiltro">
              <h4>Ale</h4>
              <h4>Lager</h4>
            </div>
          </div>

          <!-- VOLUMEN -->
          <div class="filtro">
            <a
              class="tituloFiltro"
              onClick="dropDownFiltros('volumenFiltro', 'showModificarFiltros')"
              ><i class="fas fa-caret-down"></i> Volumen</a
            >
            <div class="cerveceriasDropDown" id="volumenFiltro">
              <h4>250ml</h4>
              <h4>269ml</h4>
              <h4>330ml</h4>
              <h4>350ml</h4>
            </div>
          </div>
        </section>

        <!-- COLUMNA PRODUCTOS -->
        <section class="columna-productos">
          <!-- PRODUCTO -->
          <% productos.forEach(producto => { %>
          <article class="producto">
            <% if(producto.images[0] == undefined) { %>
            <img
              src="/images/productos/product-image-not-available.jpg"
              alt="<%= producto.name %>"
            />
            <h4 class="nombre-producto-productAdmin"><%= producto.name %></h4>
            <button
              onclick="window.location.href='/products/productEdit/<%= producto.id %>'"
              id="modificarProducto"
              class="modificar-producto"
            >
              Modificar Producto
            </button>
            <button
              class="eliminar-producto"
              onclick="eliminarProducto(<%= producto.id %>)"
            >
              Eliminar Producto
            </button>
            <% } else { %>
            <img
              src="/images/productos/<%= producto.images[0].name %>"
              alt="<%= producto.name %>"
            />
            <h4 class="nombre-producto-productAdmin"><%= producto.name %></h4>
            <button
              onclick="window.location.href='/products/productEdit/<%= producto.id %>'"
              id="modificarProducto"
              class="modificar-producto"
            >
              Modificar Producto
            </button>
            <button
              class="eliminar-producto"
              onclick="eliminarProducto(<%= producto.id %>)"
            >
              Eliminar Producto
            </button>
            <% } %>
          </article>

          <div class="modal-eliminar-producto" id="eliminar-<%= producto.id %>">
            <div
              class="containerChoiceProdutoAEliminar"
              onclick="divTransparencia(<%= producto.id %>)"
            ></div>
            <p>¿Desea eliminar el producto?</p>
            <div class="no-yes-button">
              <button
                id="noBorrarProducto"
                onclick="divTransparencia(<%= producto.id %>)"
              >
                No
              </button>
              <form
                class="borrarProducto-form"
                action="/products/productEdit/delete/<%= producto.id %>?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  id="eliminarProducto"
                  class="eliminar-producto"
                >
                  Si
                </button>
              </form>
            </div>
          </div>

          <% }); %>
        </section>
      </main>
    </div>
  </body>
</html>
