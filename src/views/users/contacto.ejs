<!DOCTYPE html>
<html lang="es">  
	<head>
		<title>BierClub - Contactanos!</title>
		<%- include('../partials/head.ejs') %>
</head>

<body>

	<!-- NAV -->
	<header>
		<%- include('../partials/nav.ejs') %>
	</header>

		<!-- CONTAINER LOGIN -->
		<div class="login-register">

			<!-- TITULO -->
			<div class="login-register-titulo">
				<h1>Cont√°ctanos</h1>	
			</div>
		
			<!-- FORMULARIO -->
			<form class="formulario" action="/users/contacto" method="POST">

			<!-- NOMBRE -->
			<div class="campo-input">
				<% if (typeof success != "undefined") {%>
					<p class="success-message"><%= success %></p>
				<%} %>
				<input class="input-registro" type="text" name="nombre" placeholder="Nombre"> 
			</div>
	
			<!-- EMAIL -->
			<div class="campo-input">
				<input class="input-registro" type="email" name="email" placeholder="Email">
			</div>

			<!-- Asunto -->
			<div class="campo-input">
				<input class="input-registro" type="text" name="subject" placeholder="Asunto del mensaje">
			</div>		
			<div class="campo-input">
				<textarea name="message" placeholder="Escribe tu mensaje"></textarea>
			</div>
			
			<!-- BOTON ENVIAR -->
			<div class="campo-input">
				<button class="input-button" type="submit">Enviar mensaje</button>
			</div>
			</form>
		</div>
				<!-- FOOTER -->
				<footer class="login-footer">
					<%- include('../partials/footer.ejs') %>
				</footer>

</body>
</html>