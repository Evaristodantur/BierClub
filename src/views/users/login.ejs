<!DOCTYPE html>
<html lang="es">  
	<head>
		<title>Iniciar Sesion</title>
		<%- include('../partials/head.ejs') %>
</head>

<body>

	<!-- NAV -->
	<header>
		<%- include('../partials/nav.ejs') %>
	</header>
	
		<!-- CONTAINER LOGIN -->
		<div class="login-register">

			<!-- TITULO -->
			<h1>Ingresa a tu Cuenta</h1>
		
			<!-- FORMULARIO -->
			<form class="formulario" action="/users/login" method="POST">
				
			<!-- EMAIL -->
			<div class="campo-input">
				<input class="input-registro" type="email" id="email" name="email" placeholder="Email">
				<%if(typeof errors != "undefined"){%>
					<% for(let i = 0 ; i < errors.length ; i++){ %>
						<%if(errors[i].param == "email"){%>
							<p style="margin: 0 auto; color:red;"><%= errors[i].msg %></p>
							<% break; %>
						<%}%>
					<%}%>
				<%}%>
			</div>

			<!-- CONTRASEÑA -->
			<div class="campo-input">
				<input class="input-registro" type="password" id="contraseña" name="contrasenia" placeholder="Contraseña"> 
				<%if(typeof errors != "undefined"){%>
					<% for(let i = 0 ; i < errors.length ; i++){ %>
						<%if(errors[i].param == "contrasenia"){%>
							<p style="margin: 0 auto; color:red;"><%= errors[i].msg %></p>
							<% break; %>
						<%}%>
					<%}%>
				<%}%>
			</div>
			
			<!-- CONTRASEÑA OLVIDADA -->
			<p class="contraseña-olvidada"><a href="#">¿Olvidaste tu Contraseña?</a></p>
			
			<!-- BOTON INGRESAR -->
			<div class="campo-input">
				<button class="input-button" type="submit" id="ingresar" value="ingresar"> Ingresar</button>
			</div>
			</form>
			
			<!-- REGISTRARSE -->
			<p class="registrate-usuario">¿Aún no tenés usuario?<a href="/users/register">¡Registrate!</a></p>
			
		</div>

	<!-- FOOTER -->
	<footer>
		<%- include('../partials/footer.ejs') %>
	</footer>

</body>
</html>