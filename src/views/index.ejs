<!DOCTYPE html>
<html lang="es">
  	<head> 
      <%- include('./partials/head.ejs') %>
      <title>BierClub</title>
    </head>
  
  <body>
    
    <!-- NAV -->
    <header>
      <%- include('./partials/nav2.ejs') %>
    </header>
    
    <!-- CONTAINER HOME -->
    <div class="home">
      
      <!-- BANNER PRINCIPAL-->
      <section>
        <div class="banner">
          <img src="/images/home/banner.jpg" alt="banner">
        </div>
      </section>

      <main>
        <!-- NOVEDADES-->
        <div class="titulos">
          <h2>Novedades</h2>
        </div>
          

        <!-- PRODUCTOS-->
        <section class="productos">

          <div class="btnAnt">
            <a href="#">
              <div class="button-pass">
                <i class="fas fa-chevron-circle-left"></i>
              </div>
            </a>
          </div>
        
          <% let arrayResponsive = ['', 'resolucionMenorA320', 'resolucionMenorA768', 'resolucionMenorA1024', 'resolucionMenorA1200'] %>
          <% for (let i=0; i < arrayResponsive.length ; i++) { %>

          <% if (productos[i] == undefined) { %>

            <article class="producto <%= arrayResponsive[i] %>">
              <a href="#">
                <img src="/images/productos/product-image-not-available.jpg" alt="Imagen de producto inexistente">
              </a>
              <h2 class="producto-titulo">No hay producto</h2>
              <div class="precio-stock">
                <div>
                  <h4 class="etiqueta-precio">$</h4>
                </div>
                <div>
                    <h5 class="stock sinStock">Sin Stock</h5>
                </div>
              </div>
              <button class="btn-producto hoverproducto" type="button"><i class="fas fa-plus"></i> Añadir al Carrito</button>
            </article>

          <% } else { %>

            <article class="producto <%= arrayResponsive[i] %>">
              <a href="/products/productDetail/<%= productos[i].id %>">
                <img src="/images/productos/<%= productos[i].imagen[0] %>" alt="<%= productos[i].nombre %>">
              </a>
              <h2 class="producto-titulo"><%= productos[i].nombre %></h2>
              <div class="precio-stock">
                <div>
                  <h4 class="etiqueta-precio">$<%= productos[i].precio %></h4>
                </div>
                <div>
                  <% if (productos[i].stock > 0) { %>
                    <h5 class="etiqueta-stock">Stock Disponible</h5>
                  <% } else { %>
                    <h5 class="stock sinStock">Sin Stock</h5>
                  <% } %>
                  
                </div>
              </div>
              <button class="btn-producto hoverproducto" type="button"><i class="fas fa-plus"></i> Añadir al Carrito</button>
            </article>
          <% } %>
        <% } %>
        
          <div class="btnSig">
            <a href="#">
              <div class="button-pass">
                <i class="fas fa-chevron-circle-right"></i>
              </div>
            </a>
          </div>
        
        </section>
      </main>

        <!-- BANNER NOVEDADES-->
        <div clas="parallax-completo">
          <div class="banner-parallax">
            <a href="/promociones">
              <div class="banner-texto">
                <h3>Las mejores Cervezas</h3>
              </div>
            </a>
          </div>
        </div>

        <!-- MEJORES PRODUCTOS-->
