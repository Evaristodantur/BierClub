        <div class ="navbar">
            <center>
                <a href="/"><img src="/images/logo.png" alt="BierClub" class="logo"></a>
                <ul id ="navcarrito" class="navcarrito">
                    <li class="search nav-items" style="cursor: pointer;"><a onclick="searchInNav2()"><i class="fas fa-search"></i></a></li>
                    <li class="nav-items"><a href="/carts/productCart"><i class="fas fa-shopping-cart"></i></a></li>

                    <li class="btn-hamburguesa"><a class="hamburguesa-icono pointer" onclick="hamburguesa()"><i class="fas fa-bars"></i></a><li>
                </ul>
                <strong>
                    <ul id ="navlogin" class="navlogin">
                        <% if(typeof userLogged == "undefined") { %>
                            <li>
                            <a href="/users/login"><i class="fas fa-sign-in-alt"></i>Iniciar Session</a>
                            </li>
                        <% } else { %>
                            <li class="dropdown-perfil-user">
                                <a class="dropdown-btn-perfil-user"  style="cursor: pointer;"><i class="fas fa-user"></i> Mi cuenta</a>
                                <div class="dropdown-content-perfil-user">
                                        <% if(typeof userLogged != "undefined" && userLogged.admin == 1) { %>
                                            <a href="/products/productAdmin"><i class="fab fa-product-hunt"></i> Administrar Productos</a>
                                            <a href="/users/usersAdmin"><i class="fas fa-users"></i> Administrar Usuarios</a>
                                        <% } %>
                                        <a href="/users/login"><i class="fas fa-user-circle"></i> Perfil</a>
                                        <a href="/users/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </strong>
                <hr>
                <a href="/"><img src="/images/logo.png" alt="BierClub" class="logonav" id="logonav"></a>
