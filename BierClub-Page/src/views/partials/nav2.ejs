                    <a href="/about-us" class="hamburguesa-item">¿Quiénes Somos?</a>
                    <a class="hamburguesa-item"><hr></a>
                    <% if(typeof userLogged == "undefined") { %>
                            <a href="/users/register" class="hamburguesa-item"><i class="far fa-registered"></i> Registrase</a>
