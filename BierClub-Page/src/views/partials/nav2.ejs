        <!-- Modal content -->
        <div class="modal-content-search-navbar2">
            <form action="/products/search" method="GET">
                <input id="searchProducts" type="text" name="search" placeholder="Buscador de Productos" onchange="this.form.submit()">
            </form>
            
        </div>

    </div>

    
    <%= console.log(userLogged)  %> 
    <div id="navbar" class="nav-backgc">
        <% if(typeof userLogged == "undefined") { %>
            <% console.log('no esta logeado'); %>
        <% } else { %>
            <% console.log("esta logeado") %>
        <% } %> 

        


        <!------------------------------------ MOBILE ----------------------------------->
        <div class="mobile-hamburguesa-menu" id="hamburguesa-onclick">
            <div class="hamburguesa-margin">
                <div class="hamburguesa-top">
                <a href="/"><img src="/images/logo.png" alt="BierClub" class="logo"></a>
                <div class="hamburguesa-menu pointer">
                    <a onclick="hamburguesaCerrar()"><i class="far fa-times-circle"></i></a>
                </div>
                </div><strong>
                <div class="hamburguesa-items">
                    <a class="hamburguesa-item pointer" onclick="hamburguesaDropdown() , transform()">Categorias<i id="transform" class="fas fa-angle-down"></i></a>
                    <div id="hamburguesa-dropdown" class="hamburguesa-dropdown-mobile">
                        <a href="/products/categorie?filtroCategoria=2" class="dropdown-mobile">No lupuladas<small>Estas cervezas son menos amargas.</small></a>
                        <a href="/products/categorie?filtroCategoria=1" class="dropdown-mobile">Lupuladas<small>Estas cervezas son mas amargas.</small></a>
