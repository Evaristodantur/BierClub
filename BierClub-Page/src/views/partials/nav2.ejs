                                <a href="/products/productAdmin" class="hamburguesa-item"><i class="fab fa-product-hunt"></i> Administrar Productos</a>
                                <a href="/users/usersAdmin" class="hamburguesa-item"><i class="fas fa-users"></i> Administrar Usuarios</a>
                                <a class="hamburguesa-item"><hr></a>    
                            <% } %> 
                            <a href="/users/login" class="hamburguesa-item"><i class="fas fa-user-circle"></i> Mi perfil</a>
                            <a href="/carts/productCart" class="hamburguesa-item"><i class="fas fa-shopping-cart"></i> Carrito</a>
                            <a class="hamburguesa-item"><hr></a>
                            <a href="/users/logout" class="hamburguesa-item"><i class="fas fa-sign-out-alt"></i> Log Out</a>
                    <% } %>
                    
                    <div class="hamburguesa-items-none">
                        <a href="/carts/productCart" class="hamburguesa-item">Carrito</a>
                        <a href="/users/login" class="hamburguesa-item">
